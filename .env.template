# Environment Configuration Template
# Copy this file to .env and fill in the values

# =====================================
# Application Settings
# =====================================

# Application environment (development, test, production)
APP_ENV=development

# Application host and port
APP_HOST=localhost
APP_PORT=8000

# Debug mode (true/false) - NEVER enable in production
DEBUG=true

# Secret key for encryption and session management
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# =====================================
# Database Configuration
# =====================================

# Database connection string
# Examples:
#   PostgreSQL: postgresql://user:password@localhost:5432/dbname
#   MySQL: mysql://user:password@localhost:3306/dbname
#   SQLite: sqlite:///./local.db
DATABASE_URL=sqlite:///./dev.db

# Database pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =====================================
# Azure Services (Optional)
# =====================================

# Azure Storage Account
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONNECTION_STRING=

# Azure Key Vault (for production secrets)
AZURE_KEY_VAULT_NAME=
AZURE_KEY_VAULT_URI=

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=

# =====================================
# External Integrations
# =====================================

# Sales Agent Integration
SALES_AGENT_API_URL=
SALES_AGENT_API_KEY=

# New Business Agent Integration
NEW_BUSINESS_AGENT_API_URL=
NEW_BUSINESS_AGENT_API_KEY=

# Lead System Integration
LEAD_SYSTEM_API_URL=
LEAD_SYSTEM_API_KEY=

# Digital Quoting System
DIGITAL_QUOTING_API_URL=
DIGITAL_QUOTING_API_KEY=

# =====================================
# Marketing Channels
# =====================================

# Google Ads
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_DEVELOPER_TOKEN=

# Facebook/Meta Ads
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=

# Email Service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=noreply@example.com

# =====================================
# Logging & Monitoring
# =====================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json, text)
LOG_FORMAT=json

# Sentry DSN (error tracking)
SENTRY_DSN=

# =====================================
# Security & Compliance
# =====================================

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# API rate limiting
RATE_LIMIT_PER_MINUTE=60

# Data retention period (days)
DATA_RETENTION_DAYS=2555  # 7 years for legal compliance

# =====================================
# Feature Flags
# =====================================

# Enable/disable features (true/false)
FEATURE_ANALYTICS_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_WEBHOOK_INTEGRATIONS=true
